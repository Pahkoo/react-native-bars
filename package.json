{
  "name": "react-native-bars",
  "version": "1.2.1",
  "license": "MIT",
  "description": "Components to control your app status and navigation bars.",
  "author": "Mathieu Acthernoene <zoontek@gmail.com>",
  "homepage": "https://github.com/zoontek/react-native-bars",
  "main": "dist/commonjs/index.js",
  "module": "dist/module/index.js",
  "types": "dist/typescript/index.d.ts",
  "files": [
    "/android",
    "/src",
    "/dist",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zoontek/react-native-bars.git"
  },
  "keywords": [
    "navigation-bar",
    "navigationbar",
    "react",
    "react-native",
    "status-bar",
    "statusbar",
    "system-bar",
    "system-bars",
    "systembar",
    "systembars"
  ],
  "scripts": {
    "format": "prettier '**/*' -u -w",
    "postinstall": "git config --local core.hooksPath .hooks",
    "prepack": "bob build"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "dist",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "prettier": {
    "trailingComma": "all"
  },
  "lint-staged": {
    "*": "prettier -u -w"
  },
  "peerDependencies": {
    "react-native": ">=0.65.0"
  },
  "devDependencies": {
    "@types/react-native": "^0.69.5",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.3",
    "react": "^18.0.0",
    "react-native": "^0.69.4",
    "react-native-builder-bob": "^0.18.3",
    "typescript": "^4.7.4"
  }
}
